	<link rel="icon" href="/img/icon.svg" type="image/svg+xml">
	<link rel="apple-touch-icon" href="/img/apple-touch-icon.png">

  </head>

	<body class="{{ title }} {{ tags | join: " " }}">
  	<a class="skip-link nav-tab" href='#main'>Skip to content</a>
		<header class="mast">
			<nav aria-label="Main">

				<div class="site-logo">
					<img src="/img/juniper-left.png" alt="juniper bough illustration" />
					<a href="/">
						<img src="/img/chipmunk.png" alt="Mountain icon" width="100" />
					</a>
				</div>

				{% assign navPages = collections.all | eleventyNavigation %}
				<ul class="nav-menu">
					{%- for entry in navPages %}
					  <li{% 
					  	if entry.url == page.url %}
					  		class="active-nav"{% endif %}>
					    	<a href="{{ entry.url }}">{{ entry.title }}</a>
				  	</li>
					{%- endfor %}
					</ul>

			</nav>

		</header>

	<main id="main">