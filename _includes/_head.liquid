<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">

	<!-- When to insert different head items per page  -->
    {% if noindex %}
		<meta name="robots" content="noindex,nofollow">		
	{% endif %}
	
	{% if page.url == '/one-week-logo/' %}
		<!-- Include Lottie library -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.2/lottie.min.js" type="text/javascript"></script>
	{% endif %}

	{% if page.url == '/blog/tag/trip-report/' %}
		<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
		<script src="{{ '/js/trip-report-chart.js' | url }}"></script>
	{% endif %}

	{% if page.url == '/art/' or page.url == '/' %}
		<!-- Include lightbox gallery -->
		<link rel="stylesheet" href="/photoswipe/dist/photoswipe.css">
	{% endif %}

	{% if page.url == '/blog/tag/art/' %}
		<!-- <meta name="follow.it-verification-code" content="bAHXdJ3wHhejG0Sd9p2r"/> -->
	{% endif %}



    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} â€” Wes</title>

	<!-- SEO Tags -->
	{% if description %}
		<meta name="description" content="{{ description }}" />
	{% endif %}

	<meta property="og:title" content="{{ title }}"/>
	<meta property="og:url" content="{{ page.url | url }} "/>
	<meta property="og:description" content="{{ description }}"/>


<meta property="og:image" content="{{ siteUrl | append: '/img/social/' | append: page.fileSlug | append: '.jpg' }}">

<link rel="preload" as="font" type="font/woff2" crossorigin href="{{ '/fonts/BagnardSans.otf' | url }}">
<link rel="preload" as="font" type="font/woff2" crossorigin href="{{ '/fonts/PublicSans-Light.ttf' | url }}">
<link rel="preload" as="font" type="font/woff2" crossorigin href="{{ '/fonts/PublicSans-Medium.ttf' | url }}">
<link rel="preload" as="font" type="font/woff2" crossorigin href="{{ '/fonts/PublicSans-Regular.ttf' | url }}">


    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  	<link rel="stylesheet" href="{{ '/css/fonts.css' | url }}">	
	{% if tags contains 'tab' %}
		<link rel="stylesheet" href="{{ '/css/tabs.css' | url }}">
	{% endif %}

