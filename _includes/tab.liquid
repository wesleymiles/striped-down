{% include '_head.liquid' %}
    
<section>
  <h2> {{ band }}: {{ song }}</h2>

    {{ content }}
</section>

<section class ="post-footer">
<hr>
    <nav class="posts-next-previous">

    {%- if collections.tab %}

        {%- assign previousTab = collections.tab | getPreviousCollectionItem %}
        {%- assign nextTab = collections.tab | getNextCollectionItem %}

        {%- if nextTab or previousTab %}
            
                {%- if previousPost %}
                <p>
                    <span class="label-prevnext">Previously:</span>
                    <span class="title-prevnext"><a href="{{ previousTab.url }}">{{ previousTab.data.band }}</a></span>
                </p>{%- endif %}
                {%- if nextTab %}
                <p>
                    <span class="label-prevnext">Next:</span>
                    <span class="title-prevnext"><a href="{{ nextTab.url }}">{{ nextTab.data.song }}</a></span>
                </p>{%- endif %}
            </ul>
        {%- endif %}

    {%- endif %}

    </nav>

    </section>

