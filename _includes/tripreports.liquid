

<article>
    <h2>Browse by date & elevation</h2>
    <div id="trip-chart" style="width: 100%; height: 500px;"></div>

    <script>
       const tripData = [
            {% for post in collections.trip-report %}
            {
                date: "{{ post.data.trips.dateHiked }}",
                elevation: {{ post.data.trips.elevation | parseElevation }},
                peak: "{{ post.data.trips.peak }}",
                url: "{{ post.url }}",
                title: "{{ post.data.title }}"
            }{% unless forloop.last %},{% endunless %}
            {% endfor %}
        ];

        // Simple visualization with clickable points
        createTripChart(tripData);
    </script>
    
</article>


