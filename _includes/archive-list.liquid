<ul class="archive-list">
        {%- for post in collections.post reversed -%}
            <li>
                <article class="archive-entry">
                  <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                  <time class="meta-date" datetime="{{ post.data.date | postDate }}">{{ post.date | postDate }}</time>
                  <p><span class="excerpt">{{ post.data.description }}</span></p>
                </article>
                    <dl class="blog-tags">
                        <dt>Tags:</dt>
                        {% for tag in post.data.tags %}
                            <dd class="tag"><a href="/blog/tag/{{ tag }}">{{ tag }}</a></dd>
                        {% endfor %}
                    </dl>
            </li>
        {%- endfor -%} 
</ul>