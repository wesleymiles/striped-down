---
pagination:
  data: collections.states
  size: 1
  alias: stateName
permalink: "/state/{{ stateName | slugify }}/"
layout: blog.liquid
---

<h1>{{ stateName }}</h1>

<ul>
  {% for post in collections.all %}
	{% if post.data.location and post.data.location.state == stateName %}
	  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
	{% endif %}
  {% endfor %}
</ul>
