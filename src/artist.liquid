---
pagination:
  data: collections.artists
  size: 1
  alias: artistName
permalink: "/artist/{{ artistName | slugify }}/"
layout: blog.liquid
---

<h1>{{ artistName }}</h1>

<ul>
  {% for post in collections.all %}
	{% if post.data.concerts and post.data.concerts.artist %}
	  {% if post.data.concerts.artist contains artistName or post.data.concerts.artist == artistName %}
		<li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
	  {% endif %}
	{% endif %}
  {% endfor %}
</ul>
