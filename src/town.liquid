---
pagination:
  data: collections.towns
  size: 1
  alias: townName
permalink: "/town/{{ townName | slugify }}/"
layout: blog.liquid
---

<h1>{{ townName }}</h1>

<ul>
  {% for post in collections.all %}
	{% if post.data.location and post.data.location.town == townName %}
	  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
	{% endif %}
  {% endfor %}
</ul>

